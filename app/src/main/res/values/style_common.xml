<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FAB">
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FAB.Large" parent="FAB">
        <item name="android:layout_width">@dimen/fab_large</item>
        <item name="android:layout_height">@dimen/fab_large</item>

    </style>

    <style name="FAB.Small" parent="FAB">
        <item name="android:layout_width">@dimen/fab_small</item>
        <item name="android:layout_height">@dimen/fab_small</item>
    </style>

    <style name="view_animator">
        <item name="android:inAnimation">@android:anim/fade_in</item>
        <item name="android:outAnimation">@android:anim/fade_out</item>
    </style>

    <!-- ============================ -->
    <!-- 自定义背景 Button -->
    <!-- ========================== -->
    <eat-comment/>

    <style name="custom_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


    <style name="input_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/rounded_rect_white</item>-->
        <item name="android:paddingLeft">@dimen/content_space_16</item>
        <item name="android:paddingRight">@dimen/content_space_16</item>
        <item name="android:paddingTop">@dimen/content_space_8</item>
        <item name="android:paddingBottom">@dimen/content_space_16</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="errorTextAppearance">@style/text_error</item>
        <item name="counterOverflowTextAppearance">@style/counter_overflow</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
    </style>

    <style name="text_error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/themeError</item>
    </style>

    <style name="counter_overflow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/themeError</item>
    </style>

    <style name="form_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/content_space_8</item>
        <!--<item name="android:textColorHighlight">@color/colorAccent</item>-->
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:textColorHint">@color/colorAccent</item>-->
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="form_edit_text.singline">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="form_edit_text.multiline">
        <item name="android:singleLine">false</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="avatar_border">
        <item name="border_color">@android:color/white</item>
        <item name="border_width">2dp</item>
    </style>


    <style name="toolbar_button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>